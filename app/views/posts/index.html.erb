<h1>Articles</h1>
<%= @posts.each do |post| %>
    <h2>
        <%= post.name %>
    </h2>
    <p>
        <%= post.content %>
    </p>
    <p>
        <a href="<%= post_path(post.id) %>" class="btn btn-primary">Lire la suite </a>
        <a href="<%= edit_post_path(post.id)%>" class="btn btn-link">Editer</a>
        <a href="<%= post_path(post.id)%>" data-confirm="êtes-vous sûr ?" data-method="delete" class="btn btn-danger">Supprimer</a>
    </p>
    <% end %>

        <p>
            <a href="<%= new_post_path %>" class="btn btn-success">Créer un article</a>
        </p>